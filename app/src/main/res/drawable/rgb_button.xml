<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:centerColor="@color/green" android:centerX="50%" android:endColor="@color/blue" android:startColor="@color/red" />

            <corners android:radius="15dp" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:centerColor="@color/green" android:centerX="50%" android:endColor="@color/blue" android:startColor="@color/red" />

            <corners android:radius="15dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:centerColor="@color/green" android:centerX="50%" android:endColor="@color/red" android:startColor="@color/blue" />

            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>