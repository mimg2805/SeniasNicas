<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nica_dark_blue"
    tools:context=".Juegos">

    <TextView
        android:id="@+id/activity_juegos_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="32dp"
        android:text="@string/juegos"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/activity_juegos_btn_juego_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_juegos_btn_juego_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/gray_button"
        android:text="Juego 1"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        app:layout_constraintBottom_toTopOf="@+id/activity_juegos_btn_juego_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_juegos_tv_title" />

    <Button
        android:id="@+id/activity_juegos_btn_juego_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/gray_button"
        android:text="Juego 2"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        app:layout_constraintBottom_toTopOf="@+id/activity_juegos_btn_juego_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_juegos_btn_juego_1" />

    <Button
        android:id="@+id/activity_juegos_btn_juego_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/gray_button"
        android:text="Juego 3"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_juegos_btn_juego_2" />
</androidx.constraintlayout.widget.ConstraintLayout>