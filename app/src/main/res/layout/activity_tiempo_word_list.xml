                android:layout_marginEnd="64dp"
                android:layout_marginRight="64dp"
                android:onClick="ayer"
                android:text="@string/tiempo_ayer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
