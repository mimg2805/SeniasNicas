                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="64dp"
                tools:text="@string/tiempo_quehoraes" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>