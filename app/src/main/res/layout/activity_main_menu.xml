<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nica_dark_blue">

    <ImageView
        android:id="@+id/activity_main_menu_iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/seniasnicas_logo"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_menu_tv_app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_main_menu_tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_menu_btn_abecedario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_iv_logo"
        tools:text="@string/app_name" />

    <Button
        android:id="@+id/activity_main_menu_btn_abecedario"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/green_button"
        android:drawableStart="@drawable/fist_icon"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:text="@string/abecedario"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_menu_btn_diccionario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_tv_app_name"
        tools:text="@string/abecedario" />

    <Button
        android:id="@+id/activity_main_menu_btn_diccionario"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/royal_navy_button"
        android:drawableStart="@drawable/book_icon"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:text="@string/diccionario"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_menu_btn_historia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_btn_abecedario"
        tools:text="@string/diccionario" />

    <Button
        android:id="@+id/activity_main_menu_btn_historia"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/cyan_teal_button"
        android:drawableStart="@drawable/clock_icon"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:text="@string/historia"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_menu_btn_mas_apps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_btn_diccionario"
        tools:text="@string/historia" />

    <Button
        android:id="@+id/activity_main_menu_btn_mas_apps"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/gray_button"
        android:drawableStart="@android:drawable/ic_menu_add"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:text="@string/mas_apps"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_menu_btn_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_btn_historia"
        tools:text="@string/mas_apps" />

    <Button
        android:id="@+id/activity_main_menu_btn_exit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/red_button"
        android:drawableStart="@drawable/exit_icon"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:shadowColor="@color/black"
        android:shadowRadius="@dimen/shadow_radius"
        android:text="@string/exit"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_menu_btn_mas_apps"
        tools:text="@string/exit" />

</androidx.constraintlayout.widget.ConstraintLayout>